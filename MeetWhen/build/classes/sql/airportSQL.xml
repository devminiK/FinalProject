<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="airport">
	<select id="countNum" resultType="int"><!-- 불필요? -->
		select count(*) from airportinfo 
	</select>
	
	<select id="getNum" resultType="int"><!-- 시퀀스 증가값 가져오기 -->
		select airportinfo_seq.nextval from dual
	</select>
	
	<insert id="insertinfo"><!-- DB에 표준정규화 후 엑셀 정보 저장 -->
		insert into airportinfo values(#{a_num}, #{a_con}, #{a_reg}, #{a_cnt})
	</insert>
	
	<delete id="deleteinfo"><!-- DB리셋을 위한 delete -->
		delete from airportinfo
	</delete>
	
</mapper>