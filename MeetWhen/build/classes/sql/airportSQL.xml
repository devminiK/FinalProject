<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="airport">

	<!-- DB정보 생성유무를 위한 갯수 확인 -->
	<select id="cntContry" resultType="int">
		select count(*) from contry 
	</select>
	<select id="cntRegion" resultType="int">
		select count(*) from region 
	</select>
	
	
	<!-- DB정보 확인 -->
	<select id="getContry" resultType="cv"> 
			select *from contry order by c_con
	</select>
	<select id="getRegion" resultType="rv"> 
			select *from region order by r_reg
	</select>
	
	
	<!-- DB정보 리셋 -->
	<delete id="deleContry">
		delete contry
	</delete>
	<delete id="deleRegion">
		delete region
	</delete>	
	
	<!-- DB에 정보 삽입 -->
	<insert id="insertContry">
		insert into contry values(#{c_con}, #{c_cnt})
	</insert>
	<insert id="insertRegion">
		insert into region values(#{r_reg}, #{r_cnt})
	</insert>	
	
</mapper>