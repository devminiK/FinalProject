<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="latlon">

<!--
	<select id="getNum" resultType="int"> 시퀀스 증가값 가져오기 
		select lonlatinfo_seq.nextval from dual
	</select>
-->
	<select id="getCnt" resultType="int">
		select count(*) from lcontry
	</select>
	
	
	
	<!-- DB 정보 확인 -->
	<select id="getLcontry" resultType="lv"> 
			select *from lcontry
	</select>
	<select id="getLregion" resultType="lv"> 
			select *from lregion
	</select>
	
	<!-- DB정보 삭제 -->
	<delete id="deleLcontry">
		delete from lcontry
	</delete>
	<delete id="deleLregion">
		delete from lregion
	</delete>
	
	<!-- DB에 정보 삽입 -->
	<insert id="insertLcontry">
		insert into lcontry values(#{place}, #{cnt}, #{lat}, #{lon})
	</insert>
	<insert id="insertLregion">
		insert into lregion values(#{place}, #{cnt}, #{lat}, #{lon})
	</insert>
	
</mapper>