<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="latlon">

<!--
	<select id="getNum" resultType="int"> 시퀀스 증가값 가져오기 
		select lonlatinfo_seq.nextval from dual
	</select>
-->
	<select id="getCnt" resultType="int">
		select count(*) from lcontry
	</select>
	
	
	
	<!-- DB 정보 확인 -->
	<select id="getLContry" resultType="lcv"> 
			select *from lcontry
	</select>
	<select id="getLRegion" resultType="lrv"> 
			select *from lregion
	</select>
	
	<!-- DB정보 삭제 -->
	<delete id="deleLContry">
		delete from lcontry
	</delete>
	<delete id="deleLRegion">
		delete from lregion
	</delete>
	
	<!-- DB에 정보 삽입 -->
	<insert id="insertLContry">
		insert into lcontry values(#{lc_con}, #{lc_cnt}, #{lc_lat}, #{lc_lon})
	</insert>
	<insert id="insertLRegion">
		insert into lregion values(#{lr_reg}, #{lr_cnt}, #{lr_lat}, #{lr_lon})
	</insert>
	
</mapper>