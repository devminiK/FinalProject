<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lonlat">

<!--
	<select id="getNum" resultType="int"> 시퀀스 증가값 가져오기 
		select lonlatinfo_seq.nextval from dual
	</select>
-->
	<select id="getCnt" resultType="int">
		select count(*) from lcontry
	</select>
	
	
	<delete id="deleteinfo"><!-- DB리셋을 위한 delete -->
		delete from lcontry
	</delete>
	
	<select id="getAll" resultType="lv"> <!-- DB에 모든 정보 가져오기 -->
			select *from lcontry
	</select>
	
	<!-- DB에 정보 삽입 -->
	<insert id="insertLcontry">
		insert into lcontry values(#{place}, #{cnt}, #{lat}, #{lon})
	</insert>
	<insert id="insertLregion">
		insert into lregion values(#{place}, #{cnt}, #{lat}, #{lon})
	</insert>
	
</mapper>